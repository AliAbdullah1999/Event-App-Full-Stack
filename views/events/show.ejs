<%- include('../partials/header') %>

<div class="container mt-4">
  <% if (messages.success) { %>
    <div class="alert alert-success" role="alert">
      <%= messages.success %>
    </div>
  <% } %>

  <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert">
      <%= messages.error %>
    </div>
  <% } %>

  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <img src="<%= event.imageUrl %>" class="card-img-top" alt="<%= event.title %>">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="card-title"><%= event.title %></h1>
            <span class="badge bg-<%= event.status === 'Published' ? 'success' : 'secondary' %>">
              <%= event.status %>
            </span>
          </div>

          <p class="card-text"><%= event.description %></p>

          <div class="row mb-4">
            <div class="col-md-6">
              <h5>Event Details</h5>
              <ul class="list-unstyled">
                <li><i class="fas fa-calendar"></i> <%= new Date(event.date).toLocaleDateString() %></li>
                <li><i class="fas fa-clock"></i> <%= event.time %></li>
                <li><i class="fas fa-map-marker-alt"></i> <%= event.location %></li>
                <li><i class="fas fa-users"></i> <%= event.registeredAttendees.length %> / <%= event.capacity %> attendees</li>
                <li><i class="fas fa-tag"></i> <%= event.category %></li>
              </ul>
            </div>
            <div class="col-md-6">
              <h5>Organizer</h5>
              <p><i class="fas fa-user"></i> <%= event.organizer.username %></p>
            </div>
          </div>

          <% if (user) { %>
            <div class="d-flex gap-2">
              <% if (event.organizer._id.toString() === user._id.toString()) { %>
                <a href="/events/<%= event._id %>/edit" class="btn btn-primary">Edit Event</a>
                <form action="/events/<%= event._id %>?_method=DELETE" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this event?')">
                    Delete Event
                  </button>
                </form>
              <% } else { %>
                <% if (event.registeredAttendees.some(attendee => attendee._id.toString() === user._id.toString())) { %>
                  <form action="/events/<%= event._id %>/register?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-warning">Cancel Registration</button>
                  </form>
                <% } else if (event.status === 'Published' && !event.isFull) { %>
                  <form action="/events/<%= event._id %>/register" method="POST">
                    <button type="submit" class="btn btn-success">Register for Event</button>
                  </form>
                <% } %>
              <% } %>
            </div>
          <% } else { %>
            <p>Please <a href="/auth/login">login</a> to register for this event.</p>
          <% } %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h5>Registered Attendees</h5>
        </div>
        <div class="card-body">
          <% if (event.registeredAttendees.length > 0) { %>
            <ul class="list-group">
              <% event.registeredAttendees.forEach(function(attendee) { %>
                <li class="list-group-item"><%= attendee.username %></li>
              <% }); %>
            </ul>
          <% } else { %>
            <p class="text-muted">No attendees yet</p>
          <% } %>

          <div class="mt-3">
            <% if (event.availableSpots > 0) { %>
              <div class="alert alert-info">
                <%= event.availableSpots %> spots remaining
              </div>
            <% } else { %>
              <div class="alert alert-warning">
                Event is full
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 