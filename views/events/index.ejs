<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Events</h1>
    <% if (user) { %>
      <a href="/events/create" class="btn btn-primary">Create Event</a>
    <% } %>
  </div>

  <% if (messages.success) { %>
    <div class="alert alert-success" role="alert">
      <%= messages.success %>
    </div>
  <% } %>

  <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert">
      <%= messages.error %>
    </div>
  <% } %>

  <div class="row">
    <% events.forEach(function(event) { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="<%= event.imageUrl %>" class="card-img-top" alt="<%= event.title %>">
          <div class="card-body">
            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text"><%= event.description.substring(0, 100) %>...</p>
            <div class="mb-2">
              <small class="text-muted">
                <i class="fas fa-calendar"></i> <%= new Date(event.date).toLocaleDateString() %> at <%= event.time %>
              </small>
            </div>
            <div class="mb-2">
              <small class="text-muted">
                <i class="fas fa-map-marker-alt"></i> <%= event.location %>
              </small>
            </div>
            <div class="mb-2">
              <span class="badge bg-<%= event.availableSpots > 0 ? 'success' : 'danger' %>">
                <%= event.availableSpots %> spots left
              </span>
              <span class="badge bg-info"><%= event.category %></span>
            </div>
            <a href="/events/<%= event._id %>" class="btn btn-primary">View Details</a>
          </div>
          <div class="card-footer text-muted">
            Organized by <%= event.organizer.username %>
          </div>
        </div>
      </div>
    <% }); %>
  </div>

  <% if (events.length === 0) { %>
    <div class="text-center mt-4">
      <h3>No events found</h3>
      <p>Be the first to create an event!</p>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %> 