<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4">Discover Events</h1>
    <% if (user) { %>
      <a href="/events/create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create Event
      </a>
    <% } %>
  </div>

  <% if (messages.success) { %>
    <div class="alert alert-success" role="alert">
      <%= messages.success %>
    </div>
  <% } %>

  <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert">
      <%= messages.error %>
    </div>
  <% } %>

  <div class="row">
    <% if (events.length > 0) { %>
      <% events.forEach(function(event) { %>
        <div class="col-md-4 mb-4">
          <div class="card event-card new-event">
            <img src="<%= event.imageUrl %>" class="card-img-top" alt="<%= event.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= event.title %></h5>
              <p class="card-text"><%= event.description.substring(0, 100) %>...</p>
              
              <div class="event-info">
                <i class="fas fa-calendar"></i>
                <span><%= new Date(event.date).toLocaleDateString() %> at <%= event.time %></span>
              </div>
              
              <div class="event-info">
                <i class="fas fa-map-marker-alt"></i>
                <span><%= event.location %></span>
              </div>
              
              <div class="mt-3 mb-3">
                <span class="badge bg-<%= event.availableSpots > 0 ? 'success' : 'danger' %>">
                  <i class="fas fa-users"></i> <%= event.availableSpots %> spots left
                </span>
                <span class="badge bg-info">
                  <i class="fas fa-tag"></i> <%= event.category %>
                </span>
              </div>
              
              <div class="d-grid">
                <a href="/events/<%= event._id %>" class="btn btn-primary">
                  <i class="fas fa-info-circle"></i> View Details
                </a>
              </div>
            </div>
            <div class="card-footer text-muted">
              <i class="fas fa-user"></i> Organized by <%= event.organizer.username %>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-12">
        <div class="empty-state">
          <i class="fas fa-calendar-alt fa-3x mb-3 text-muted"></i>
          <h3>No events found</h3>
          <p class="text-muted">Be the first to create an event!</p>
          <% if (user) { %>
            <a href="/events/create" class="btn btn-primary">
              <i class="fas fa-plus"></i> Create Event
            </a>
          <% } else { %>
            <a href="/auth/login" class="btn btn-primary">
              <i class="fas fa-sign-in-alt"></i> Login to Create Event
            </a>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %> 