<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Events</title>
  <link rel="stylesheet" href="../public/css/events.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="page-header">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6">
          <h1 class="display-4 mb-0">Events</h1>
        </div>
        <div class="col-md-6 text-md-end">
          <% if (typeof user !== 'undefined' && user) { %>
            <a href="/events/create" class="btn btn-light">
              <i class="fas fa-plus me-2"></i>Create Event
            </a>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <div class="container py-5">
    <div class="row mb-4">
      <div class="col-md-8">
        <div class="input-group">
          <span class="input-group-text bg-white border-end-0">
            <i class="fas fa-search text-muted"></i>
          </span>
          <input type="text" id="searchEvents" class="form-control border-start-0" placeholder="Search events...">
        </div>
      </div>
      <div class="col-md-4">
        <select class="form-select" id="eventCategory">
          <option value="">All Categories</option>
          <option value="music">Music</option>
          <option value="sports">Sports</option>
          <option value="technology">Technology</option>
          <option value="business">Business</option>
          <option value="arts">Arts & Culture</option>
          <option value="food">Food & Drink</option>
        </select>
      </div>
    </div>

    <div class="row g-4">
      <% if (typeof events !== 'undefined' && events.length > 0) { %>
        <% events.forEach(function(event) { %>
          <div class="col-md-6 col-lg-4">
            <div class="card h-100">
              <% if (event.image) { %>
                <img src="<%= event.image %>" class="card-img-top" alt="<%= event.title %>">
              <% } else { %>
                <div class="card-img-top bg-light text-center py-5">
                  <i class="fas fa-calendar-alt fa-4x text-muted"></i>
                </div>
              <% } %>
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <h5 class="card-title mb-0"><%= event.title %></h5>
                  <span class="badge bg-primary"><%= event.category %></span>
                </div>
                <p class="card-text text-muted mb-3"><%= event.description %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="text-muted small">
                    <i class="fas fa-calendar me-2"></i><%= new Date(event.date).toLocaleDateString() %>
                    <i class="fas fa-map-marker-alt ms-3 me-2"></i><%= event.location %>
                  </div>
                </div>
              </div>
              <div class="card-footer bg-white border-top-0">
                <div class="d-grid">
                  <a href="/events/<%= event._id %>" class="btn btn-outline-primary">
                    View Details
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12 text-center py-5">
          <i class="fas fa-calendar-times fa-4x text-muted mb-4"></i>
          <h3>No Events Found</h3>
          <p class="text-muted">There are no events available at the moment.</p>
          <% if (typeof user !== 'undefined' && user) { %>
            <a href="/events/create" class="btn btn-primary">
              <i class="fas fa-plus me-2"></i>Create First Event
            </a>
          <% } %>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    // Search functionality
    document.getElementById('searchEvents').addEventListener('input', function(e) {
      const searchTerm = e.target.value.toLowerCase();
      filterEvents(searchTerm, document.getElementById('eventCategory').value);
    });

    // Category filter
    document.getElementById('eventCategory').addEventListener('change', function(e) {
      const category = e.target.value;
      filterEvents(document.getElementById('searchEvents').value.toLowerCase(), category);
    });

    function filterEvents(searchTerm, category) {
      const eventCards = document.querySelectorAll('.col-md-6.col-lg-4');
      
      eventCards.forEach(card => {
        const title = card.querySelector('.card-title').textContent.toLowerCase();
        const description = card.querySelector('.card-text').textContent.toLowerCase();
        const eventCategory = card.querySelector('.badge').textContent.toLowerCase();
        
        const matchesSearch = title.includes(searchTerm) || description.includes(searchTerm);
        const matchesCategory = !category || eventCategory === category;
        
        card.style.display = matchesSearch && matchesCategory ? 'block' : 'none';
      });
    }
  </script>

  <%- include('partials/footer') %>
</body>
</html>
