<%- include('../partials/header') %>

<div class="container py-5">
    <div class="row justify-content-center text-center">
        <div class="col-md-8">
            <div class="error-page">
                <i class="fas fa-exclamation-triangle fa-5x text-warning mb-4"></i>
                <h1 class="display-1 fw-bold text-danger mb-4">Oops!</h1>
                <h2 class="h3 mb-4">Something went wrong</h2>
                <p class="lead text-muted mb-3">We're experiencing some technical difficulties.</p>
                <% if (error.status) { %>
                    <p class="text-muted mb-2">Error Code: <%= error.status %></p>
                <% } %>
                <% if (error.message) { %>
                    <p class="text-muted mb-5"><%= error.message %></p>
                <% } %>
                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                    <button onclick="window.history.back()" class="btn btn-primary btn-lg px-4">
                        <i class="fas fa-arrow-left me-2"></i>Go Back
                    </button>
                    <a href="/" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="fas fa-home me-2"></i>Go Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-page {
        padding: 4rem 0;
    }
    .error-page i {
        animation: shake 1s infinite;
    }
    @keyframes shake {
        0%, 100% {
            transform: translateX(0);
        }
        25% {
            transform: translateX(-10px);
        }
        75% {
            transform: translateX(10px);
        }
    }
</style>

<%- include('../partials/footer') %> 