<%- include('../partials/header') %>

<div class="container py-5">
    <div class="row justify-content-center text-center">
        <div class="col-md-8">
            <div class="error-page">
                <i class="fas fa-map-signs fa-5x text-muted mb-4"></i>
                <h1 class="display-1 fw-bold text-primary mb-4">404</h1>
                <h2 class="h3 mb-4">Page Not Found</h2>
                <p class="lead text-muted mb-5">Oops! The page you're looking for doesn't exist or has been moved.</p>
                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                    <a href="/" class="btn btn-primary btn-lg px-4">
                        <i class="fas fa-home me-2"></i>Go Home
                    </a>
                    <a href="/events" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="fas fa-calendar me-2"></i>Browse Events
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-page {
        padding: 4rem 0;
    }
    .error-page i {
        animation: bounce 2s infinite;
    }
    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-30px);
        }
        60% {
            transform: translateY(-15px);
        }
    }
</style>

<%- include('../partials/footer') %> 